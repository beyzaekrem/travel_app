<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#A0D995">

    <!-- Ülke Görseli -->
    <ImageView
        android:id="@+id/countryImage"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:contentDescription="Country Image"
        android:scaleType="centerCrop" />

    <!-- Ülke Adı -->
    <TextView
        android:id="@+id/countryName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_margin="16dp"
        android:fontFamily="@font/big_shoulders_stencil_text_extrabold"
        android:gravity="center"
        android:textColor="@color/dark_green"
        android:textSize="24sp"
        android:textStyle="bold" />

    <!-- Sekme Butonları -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center">

        <Button
            android:id="@+id/btnHotels"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/big_shoulders_stencil_text_extrabold"
            android:text="Hotels" />

        <Button
            android:id="@+id/btnFoods"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/big_shoulders_stencil_text_extrabold"
            android:text="Foods" />

        <Button
            android:id="@+id/btnPlaces"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/big_shoulders_stencil_text_extrabold"
            android:text="Places" />
    </LinearLayout>

    <!-- Gezilecek Yer Listesi -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/placesRecyclerView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp" />
</LinearLayout>
