<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/light_green">

    <!-- Toolbar (sadece favori ve paylaÅŸÄ±m ikonlarÄ± iÃ§in) -->
    <androidx.appcompat.widget.Toolbar
        android:id="@+id/myToolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@android:color/transparent"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
        app:title="  "
        app:titleTextColor="@android:color/white" />

    <!-- Ãœlke gÃ¶rseli + Ãœlke ismi -->
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="200dp">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            android:src="@drawable/bulgaria"
            android:contentDescription="Bulgaria Image" />

        <TextView
            android:id="@+id/tvCountryTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|center_horizontal"
            android:layout_marginBottom="16dp"
            android:fontFamily="@font/big_shoulders_stencil_text_extrabold"
            android:text="BULGARIA"
            android:textColor="@android:color/white"
            android:textSize="30sp"
            android:textStyle="bold" />
    </FrameLayout>

    <!-- Butonlar -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal"
        android:layout_marginTop="16dp">

        <Button
            android:id="@+id/btnHotels"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Hotels"
            android:textColor="@android:color/white"
            android:backgroundTint="@color/purple_500"
            android:layout_margin="8dp" />

        <Button
            android:id="@+id/btnFoods"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Foods"
            android:textColor="@android:color/white"
            android:backgroundTint="@color/purple_500"
            android:layout_margin="8dp" />

        <Button
            android:id="@+id/btnPlaces"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Places"
            android:textColor="@android:color/white"
            android:backgroundTint="@color/purple_500"
            android:layout_margin="8dp" />
    </LinearLayout>

    <!-- AÃ§Ä±klama metni -->
    <TextView
        android:id="@+id/tvCountryDescription"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="ðŸ‡§ðŸ‡¬\nBulgaria is a land of rich history, diverse landscapes, and vibrant traditions. From the golden beaches of the Black Sea to the snow-capped Pirin Mountains, and from ancient Thracian ruins to colorful folklore festivals, Bulgaria is a hidden gem in Eastern Europe."
        android:textSize="15sp"
        android:textColor="@android:color/black"
        android:background="@drawable/description_background"
        android:padding="16dp"
        android:layout_marginTop="20dp"
        android:layout_marginHorizontal="16dp"
        android:lineSpacingExtra="6dp"
        android:gravity="center"
        android:textAlignment="center"
        android:elevation="2dp" />

</LinearLayout>
